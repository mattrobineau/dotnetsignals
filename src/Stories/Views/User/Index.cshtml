@model Stories.Models.ViewModels.User.UserViewModel

<section>
    <div class="container">
        <div class="user-details">
            <div>
                <h1>@Model.Username</h1>
                <div>
                    Joined
                    <time datetime="@Model.CreatedDate"></time>
                </div>
                @if (Model.IsBanned)
                {
                <div>
                    User account has been banned.
                </div>
                }
            </div>
        </div>
        <div class="change-password">
            <h2 class="underline">Change Password</h2>
            @Html.Partial("_ChangePassword.cshtml", Model.ChangePasswordViewModel)
        </div>
        <div>
            <h2 class="underline">Invite user</h2>
            @Html.Partial("Invite.cshtml", Model.InviteViewModel)
        </div>
    </div>
</section>
